<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.teamname.controllers.Games.GameCenterController">
   <center>
      <HBox prefHeight="900.0" prefWidth="1600.0">
         <children>
            <GridPane prefHeight="900.0" prefWidth="1600.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.333333333333336" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.333333333333336" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.333333333333336" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" percentHeight="100.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <StackPane fx:id="snakeGamePane" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #000000;">
                           <children>
                              <ImageView fitHeight="240.0" fitWidth="388.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../gameImages/snakeGame/fixedSnake.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </StackPane>
                     </children>
                     <GridPane.margin>
                        <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
                     </GridPane.margin>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
