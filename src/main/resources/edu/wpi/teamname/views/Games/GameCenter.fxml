                        <Pane fx:id="smashPane" prefHeight="234.0" prefWidth="100.0" style="-fx-background-color: #000000;" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                     <GridPane.margin>
                        <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
                     </GridPane.margin>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2" />
               </children>
            </GridPane>
         </children>
      </HBox>
   </center>
