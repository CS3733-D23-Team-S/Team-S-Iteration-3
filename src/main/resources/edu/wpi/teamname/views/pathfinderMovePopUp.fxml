<Scene xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.teamname.controllers.map.PathfindingMovePopUpController">
   <root>
      <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="500.0" prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: #ffffff;">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="5.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="80.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="5.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" percentHeight="5.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" percentHeight="5.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #ffffff;" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label prefHeight="52.0" prefWidth="453.0" text="Add Move">
                           <font>
                              <Font name="Open Sans Regular" size="36.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <MFXDatePicker fx:id="datePick" prefHeight="38.0" prefWidth="404.0" promptText="Select Move Date">
                     <VBox.margin>
                        <Insets bottom="25.0" />
                     </VBox.margin>
                  </MFXDatePicker>
                  <SearchableComboBox fx:id="locationBox" prefHeight="26.0" prefWidth="314.0" promptText="Select Location to Move" style="-fx-background-color: #ffffff; -fx-region-background: #ffffff;" stylesheets="@../../../../Stylesheets/pathfinding.css">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets bottom="25.0" />
                     </VBox.margin>
                  </SearchableComboBox>
                  <MFXComboBox fx:id="nodeCombo" prefHeight="42.0" prefWidth="401.0" promptText="Select Node to Move to">
                     <VBox.margin>
                        <Insets bottom="80.0" />
                     </VBox.margin>
                  </MFXComboBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <MFXButton fx:id="cancelAdd" prefHeight="50.0" prefWidth="80.0" style="-fx-border-color: #000000; -fx-border-radius: 5 5 5 5;" text="Cancel">
                           <font>
                              <Font name="Open Sans Regular" size="16.0" />
                           </font>
                        </MFXButton>
                        <MFXButton fx:id="confirmAdd" prefHeight="50.0" prefWidth="103.0" style="-fx-background-color: #1D3D94; -fx-background-radius: 5 5 5 5;" text="Confirm" textFill="WHITE">
                           <font>
                              <Font name="Open Sans Regular" size="16.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="220.0" />
                           </HBox.margin>
                        </MFXButton>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </GridPane>
   </root>
</Scene>
